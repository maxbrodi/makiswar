<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <!-- EN CAS DE MORT DU USER -->
      <% if @dead %>

        <div class="recap">
          <h1><%= current_user.name %> died!</h1>
          <p><%= @killer.name %> (<%= @killer.crew %> maki) killed him with a banana launcher.</p>
        </div>

        <div class="action">
          <%= button_to "Resurrect!", { action: 'update' }, method: :patch, id: "resurrect" %>
        </div>

      <% elsif @change_crew %>
        <div class="recap">
          <h2>You are now part of #team<%= current_user.crew %> !</h2>
          <%= image_tag "emblems/#{current_user.crew}.gif", class: "emblem-change" %>
        </div>

        <div class="action">
          <%= button_to "Go #{current_user.crew}s!", worlds_show_path, method: :get, id: "resurrect" %>
        </div>
      <!-- RESUME SI PAS MORT NI CHANGEMENT DE CREW-->
      <% else %>

        <div class="recap">
          <h3> Some stuff happened: </h3>
          <% @events.each do |event| %>

            <%= image_tag "events/island.png", class: "event-logo" %>
            <%= l(event[:updated_at], format: :event) %>
            <br>

             <% case event[:name] %>
            <% when "attack" %>
              <% if event[:item_type_id] %>
                <%= event.user.name + "(" + event.user.crew + ")" + " attacked your maki with" + ItemType.find(event[:item_type_id]).name + "." %>
              <% else %>
                <%= event.user.name + "(" + event.user.crew + ")" + " attacked your maki with a chopstick." %>
              <% end %>
            <% when "missed" %>
              <%= event.user.name + " tried to attack your maki but missed." %>
            <% when "birth" %>
            <%= current_user.name + " landed on " + World.find(event[:world_id]).name + "!" %>
            <% end %>

            <br>

          <% end %>
        </div>

        <div class="action">
          <%= button_to "Let\'s fight!", worlds_show_path, method: :get, id: "resurrect" %>
        </div>

      <!-- FIN BOUCLE MORT -->
      <% end %>
    </div>
  </div>
</div>

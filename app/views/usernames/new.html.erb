<div class="makiswar-not-connected">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="card-white-bg">
          <%= link_to t('component.back'), root_path, class:'btn btn-default' %>
          <h2 class='text-center'><%= t('.instruction') %></h2>

          <%= form_tag username_path, method: :post do %>
            <%= text_field_tag :username, '', placeholder:'your maki deserves the best', class: "form-control" %><br>
            <%= submit_tag t('.submit'), class: "btn btn-success form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

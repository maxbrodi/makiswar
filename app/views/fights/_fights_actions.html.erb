<div class="fights-container">
  <div class="container">
    <div class="row">

      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="fight-display">
          <!-- life and soy sauce jauges -->
          <div id="attacker-name">
            <%= attacker.name %>
          </div>
          <div id="defender-name">
            <%= defender.name %>
          </div>

          <%= link_to t('component.back'), worlds_show_path, class: "btn btn-primary back-button" %>

          <%= image_tag "fight/lifebar/lifebar_#{lifebar}.png", class: "lifebar" %>
          <%= image_tag "fight/attacker/#{attacker.crew}.png", class: "attacker" %>
          <% if success %>
            <%= image_tag "fight/defender/#{defender.crew}.png", class: "defender hatch" %>
          <% else %>
            <%= image_tag "fight/defender/#{defender.crew}.png", class: "defender" %>
          <% end %>
          <div id="jauge-holder">
            <%= image_tag "info/soja_" + jauge, id: "jauge" %>
            <div id="soja" class="text-center">
              <%= soja %>
          </div>
          </div>
          <% if message %>
            <div id="after-attack-message">
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="weapon-selection scrolls">
          <div class="item-selection-box consumption-4cl" >
            <%= image_tag "chopsticks.png", class: "item-attack-display" %>
            <div class="power"><h3>H</h3></div>
            <div class="consumption"><h3>4cl</h3></div>
            <% if attacker.soja >= 4 %>
               <%= button_to "Chopsticks!", { action: 'update' }, method: :patch, params: { defender: defender_id }, remote: true, class: "confirm-attack" %>
            <% else %>
              <p class="needs"><%= t(".nosoy", missing_cl: 4) %></p>
            <% end %>
          </div>
          <div class="item-selection-box consumption-1cl">
            <h2>Other item</h2>
          </div>
          <div class="item-selection-box consumption-3cl">
            <h2>Third item</h2>
          </div>
          <div class="item-selection-box consumption-2cl">
            <h2>4th item</h2>
          </div>
        </div>

      </div>
      <% if killed %>
        <div id="killed">
          <h1 class="bigEntrance">BOOM!</h1>
          <h2><%= t(".killed", opponent: defender.name) %></h2>
          <br>
          <p><%= link_to "Back to the future", worlds_show_path, class: "confirm-attack" %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
